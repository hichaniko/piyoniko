<% @items.each do |item| %>
 <%=item.user.nickname%> 
 <div class="item"> 
   <% if item.image.attached? %>
   <%= image_tag item.image.variant(resize: '500x500'), class: 'message-image' if item.image.attached? %>
    <% end %>


    <div class="item-date">
      <%= item.created_at %>
    </div>

    <div class="item-content">
      <%= item.text %>
    </div>

   <ul class="more_list">
      <li> 
        <%= link_to '詳細', item_path(item.id) %>
      </li>
      <%# <% if user_signed_in? && current_user.id == item.user_id %> 
      <li>
        <%= link_to '編集', edit_item_path(item.id) %>
      </li>
      <li>
        <%= link_to '削除', item_path(item.id), data: { turbo_method: :delete } %>
      </li>
      <%# <% end %> 
      <%# <a href="/users/<%= item.user.id %>
    </ul>
  </div>

    
  </div>
</div>
<% end %>


<% @areas.each do |area| %>
 <%=area.user.nickname%>
 <div class="area">  
   <% if area.image.attached? %>
   <%= image_tag area.image.variant(resize: '500x500'), class: 'message-image' if area.image.attached? %>
    <% end %>

    <div class="area-date">
      <%= area.created_at %>
    </div>

    <div class="area-content">
      <%= area.area_text %>
    </div>

    

    <ul class="more_list">

     <li>
      <%= link_to '詳細', area_path(area.id) %>
     </li>

     <li>
      <%= link_to '編集', edit_area_path(area.id) %>
     </li>

     <li>
      <%= link_to '削除', area_path(area.id), data: { turbo_method: :delete } %>
     </li>
    </ul>

</div>
</div>
<% end %>

