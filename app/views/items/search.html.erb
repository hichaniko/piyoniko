<%= form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<div class="messages">
  <% @items.each do |item| %>

  <div class="item-main">
    
  <div class="item"> 
   <%=item.user.nickname%> 

  <div class="item-date">
    <%= item.created_at %>
  </div> 

  <div class="item-content">
     <%= item.text %>
  </div>

  <% if item.image.attached? %>
    <%= image_tag item.image.variant(resize: '500x500'), class: 'message-image' if item.image.attached? %>
  <% end %>

<ul class="more_list">
  
     <%= link_to '詳細', item_path(item.id) %>
<%# <% if user_signed_in? && current_user.id == item.user_id %> 
     <%= link_to '編集', edit_item_path(item.id) %>
     <%= link_to '削除', item_path(item.id), data: { turbo_method: :delete } %>
<%# <% end %> 
<%# <a href="/users/<%= item.user.id %>
  </ul>
</div>
</div>

<hr class="hr1">

<% end %>